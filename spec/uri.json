{
  "$schema": "http://json-schema.org/draft-07/schema",
  "oneOf": [
    {
      "type": "string",
      "format": "uri"
    },
    {
      "type": "object",
      "properties": {
        "protocol": {
          "type": "string",
          "enum": [
            "http:",
            "https:"
          ]
        },
        "host": {
          "type": "string",
          "format": "hostname"
        },
        "pathname": {
          "type": "string",
          "default": "/"
        },
        "port": {
          "type": "integer"
        }
      },
      "required": [
        "protocol",
        "host",
        "pathname"
      ]
    }
  ]
}
